<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/mvc 
      http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<bean id="driverSignUpController"
		class="com.rab3.controllers.DriverSignUpController">
		<property name="driverSignUpService"
			ref="driverSignUpService"></property>
	</bean>

	<bean id="driverSignUpService"
		class="com.rab3.services.DriverSignUpService"></bean>

	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean
				class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />

		</mvc:message-converters>
	</mvc:annotation-driven>


</beans>